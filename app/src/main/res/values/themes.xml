<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hotel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/深竹月_浅色</item>
        <item name="colorPrimaryVariant">@color/深竹月_浅色</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/深竹月</item>
    </style>
    
    <style name="Theme.Start" parent="Theme.Hotel">
        <item name="android:windowBackground">@drawable/start</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
<!--        <item name="android:enforceNavigationBarContrast">false</item>-->
    </style>


    <style name="BlueEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/月色白</item>
        <item name="colorControlActivated">@color/深竹月</item>

    </style>





    
</resources>