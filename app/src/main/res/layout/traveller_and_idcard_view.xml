<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/traveller_and_idcard_view_all_padding">

    <EditText
        android:layout_width="0dp"
        android:layout_weight="1"
        android:hint="@string/book_who_live_in"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/traveller_and_idcard_view_all_padding"
        />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#20000000"/>

    <EditText
        android:layout_width="0dp"
        android:layout_weight="2"
        android:hint="@string/idcard"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/traveller_and_idcard_view_all_padding"
        />

</LinearLayout>