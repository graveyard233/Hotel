<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Room.Activity_book_the_room"
    android:divider="@drawable/divider_room_detail"
    android:padding="16dp"
    android:showDividers="middle"
    android:orientation="vertical">

    <TextView
        android:text="亲爱的用户："
        android:textSize="@dimen/RoomBookText"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16sp"
        >

<!--        https://juejin.cn/post/6917909994985750535-->
<!--        https://github.com/loperSeven/DateTimePicker.git-->
        <TextView
            android:id="@+id/bookTheRoom_choiceStart"
            android:text="选择入住时间"
            android:textSize="@dimen/RoomBookText"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"

            android:layout_height="wrap_content"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#20000000"/>

        <TextView
            android:text="选择退房时间"
            android:textSize="@dimen/RoomBookText"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16sp"
        >

        <TextView
            android:text="入住时间"
            android:textSize="@dimen/RoomBookText"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#20000000"/>

        <TextView
            android:text="退房时间"
            android:textSize="@dimen/RoomBookText"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.hotel.UI.Room.TravellerAndIDcardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.example.hotel.UI.Room.TravellerAndIDcardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="留言:"
            android:textSize="@dimen/RoomBookText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:maxLines="5"
            android:gravity="top"
            android:padding="5dp"
            />

    </LinearLayout>





</LinearLayout>